---
interface Props {
  youtubeUrl?: string;
  threshold?: number;
}

const { 
  youtubeUrl = "https://www.youtube.com/",
  threshold = 0.6 
} = Astro.props;
---

<div id="zipper-container" data-youtube-url={youtubeUrl} data-threshold={threshold}>
  <div id="layer-youtube">
    <div id="yt-bg-pattern"></div>
    <div id="yt-content">
      <div class="yt-icon-wrapper">
        <div class="yt-triangle"></div>
      </div>
      <h2 class="yt-text">SUBSCRIBE</h2>
      <p class="yt-sub-text">Welcome to the Channel</p>
    </div>
  </div>

  <div id="part-bottom-left" class="blog-part"></div>
  <div id="part-top-right" class="blog-part"></div>

  <div id="tear-trigger">
    <div class="tear-hint-line"></div>
    <div class="tear-hint-arrow"></div>
  </div>
</div>

<style is:global>
  /* --- 基本設定 --- */
  
  /* Zipperモード有効時の強制スタイル */
  body.zipper-active {
    overflow: hidden !important;
    user-select: none !important;
    -webkit-user-select: none !important;
  }

  /* 元のコンテンツを隠す */
  body.zipper-active > *:not(#zipper-container):not(script) {
    visibility: hidden !important;
  }

  /* ▼▼▼ 修正箇所: コンテナは常に表示し、クリックを透過させる ▼▼▼ */
  #zipper-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 9999;
    
    /* 初期状態はコンテナ自体は表示するが、クリックは下のコンテンツに通す */
    display: block; 
    pointer-events: none; 
  }

  /* アクティブになったら、コンテナ全体でイベントを受け取る（ドラッグ等のため） */
  body.zipper-active #zipper-container {
    pointer-events: auto;
  }
  /* ▲▲▲▲▲▲ */


  /* --- コンテンツ幅の再現用ラッパー --- */
  .zipper-body-clone {
    max-width: 1000px;
    margin: 0px auto;
    padding: 20px;
    font-family: sans-serif;
    line-height: 1.6;
    color: #e0d5c7;
    background-color: transparent; 
    box-sizing: border-box;
    min-height: 100%;
    position: relative;
  }

  /* --- 下層: YouTube --- */
  #layer-youtube {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, #cc0000 0%, #800000 100%);
    
    /* ▼▼▼ 修正箇所: 初期状態は非表示にする（そうしないと画面が真っ赤になる） ▼▼▼ */
    display: none; 
    
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 1;
    overflow: hidden;
  }

  /* アクティブ時のみ表示 */
  body.zipper-active #layer-youtube {
    display: flex;
  }
  /* ▲▲▲▲▲▲ */

  #yt-bg-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 30px 30px;
    opacity: 0.3;
  }

  #yt-content {
    position: relative;
    text-align: center;
    opacity: 0;
    transform: scale(0.9);
    transition: all 0.1s;
    color: #fff;
    z-index: 2;
  }

  .yt-icon-wrapper {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 90px;
    height: 64px;
    background-color: #fff;
    border-radius: 16px;
    margin-bottom: 20px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.4);
  }

  .yt-triangle {
    width: 0;
    height: 0;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-left: 18px solid #cc0000;
    margin-left: 4px;
  }

  .yt-text {
    font-size: 2.5rem;
    font-weight: 900;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    font-family: sans-serif;
    margin: 0;
    text-shadow: 0 4px 10px rgba(0,0,0,0.3);
  }

  .yt-sub-text {
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    opacity: 0.8;
    margin-top: 8px;
    font-family: serif;
  }

  /* --- 上層: ブログ (分割パーツ) --- */
  .blog-part {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* ブログ全体の背景色 */
    background-color: #1a1612; 
    z-index: 10;
    will-change: clip-path;
    overflow: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;

    /* ▼▼▼ 修正: 初期は非表示にして、画面が暗くなるのを防ぐ ▼▼▼ */
    display: none;
    /* ▲▲▲ */
  }

  /* ▼▼▼ 追加: ジッパー起動時に表示させる ▼▼▼ */
  body.zipper-active .blog-part {
    display: block;
  }
  /* ▲▲▲ */


  /* トリガー */
#tear-trigger {
    position: fixed;
    top: 0;
    left: 0;
    width: 120px;
    height: 120px;
    z-index: 50;
    cursor: grab;
    touch-action: none;
    pointer-events: auto; 
  }

  /* ▼▼▼ 追加: 疑似要素で「赤い破れ目」を再現する ▼▼▼ */
  /* レイヤーが非表示でも、ここだけ赤く見せることで「めくれ」を表現します */
  #tear-trigger::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 60px 60px 0 0; /* 左上三角 */
    border-color: #cc0000 transparent transparent transparent; /* 赤色 */
    z-index: -1;
    transition: opacity 0.2s;
    pointer-events: none;
  }

  /* ジッパーが動き出したら、本物のレイヤーが出るので偽物は消す */
  body.zipper-active #tear-trigger::before {
    opacity: 0;
  }
  /* ▲▲▲ */
  
  /* ▼▼▼ 修正: ヒントの線と矢印を常時表示＆アニメーション ▼▼▼ */
  .tear-hint-line {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 60px;
    height: 60px;
    border-top: 2px dashed rgba(255, 255, 255, 0.6);
    border-left: 2px dashed rgba(255, 255, 255, 0.6);
    opacity: 1; /* 常時表示 */
    box-sizing: border-box;
    pointer-events: none;
  }

  .tear-hint-arrow {
    position: absolute;
    top: 45px;
    left: 45px;
    width: 20px;
    height: 20px;
    border-top: 3px solid #fff;
    border-left: 3px solid #fff;
    transform: rotate(135deg); /* 斜め下を指す矢印 */
    opacity: 1;
    pointer-events: none;
    animation: pulseArrow 2s infinite ease-in-out; /* 注目を集めるアニメーション */
    box-shadow: -2px -2px 5px rgba(0,0,0,0.3); /* 視認性を上げる影 */
  }

  /* 矢印のプカプカ動くアニメーション */
  @keyframes pulseArrow {
    0% { transform: translate(0, 0) rotate(135deg); opacity: 0.8; }
    50% { transform: translate(5px, 5px) rotate(135deg); opacity: 1; }
    100% { transform: translate(0, 0) rotate(135deg); opacity: 0.8; }
  }

  /* ホバー時はさらに強調 */
  #tear-trigger:hover .tear-hint-line {
    border-color: rgba(255, 255, 255, 1);
  }
  #tear-trigger:hover .tear-hint-arrow {
    animation: none; /* ホバー時は止める */
    border-color: #ffcc00; /* 色を変える */
  }
  /* ▲▲▲ */

  body.is-dragging #tear-trigger {
    cursor: grabbing;
  }
  /* アニメーション */
  .animate-fly-tr {
    transition: transform 0.8s cubic-bezier(0.5, 0, 0.2, 1), opacity 0.8s ease;
    transform: translate(30%, -30%);
    opacity: 0;
    pointer-events: none;
  }
  .animate-fly-bl {
    transition: transform 0.8s cubic-bezier(0.5, 0, 0.2, 1), opacity 0.8s ease;
    transform: translate(-30%, 30%);
    opacity: 0;
    pointer-events: none;
  }
</style>

<script>
  let cleanupFn: (() => void) | null = null;
function initZipper() {
    // ページロードごとにクリーンアップ関数を実行
    if (cleanupFn) cleanupFn();

    const container = document.getElementById('zipper-container');
    if (!container) return;
const CONFIG = {
      youtubeUrl: container.dataset.youtubeUrl ||
"https://www.youtube.com/",
      threshold: parseFloat(container.dataset.threshold || "0.6"),
      tearGap: 60,
      transitionLen: 150,
      jaggedness: 10,
      density: 20
    };
const layerBL = document.getElementById('part-bottom-left') as HTMLElement;
    const layerTR = document.getElementById('part-top-right') as HTMLElement;
    const trigger = document.getElementById('tear-trigger') as HTMLElement;
const ytContent = document.getElementById('yt-content') as HTMLElement;

    // --- DOM複製 & ラッパー適用 (初期化時からは削除/移動) ---
    // ここからDOM複製と zipper-active の適用を削除しました。
    // 代わりに onStart (ドラッグ開始時) に移動します。
    

    // --- 双方向スクロール同期 ---
    // 循環更新を防ぐための簡易的なフラグまたは値チェックを使用
    const syncScroll = (source: HTMLElement, target: HTMLElement) => {
      // 差がある場合のみ更新（無限ループ防止）
      if (Math.abs(source.scrollTop - target.scrollTop) > 1) {
        target.scrollTop = source.scrollTop;
}
    };

    const onScrollBL = () => syncScroll(layerBL, layerTR);
    const onScrollTR = () => syncScroll(layerTR, layerBL);
    // スクロール同期のリスナーは、DOM複製後に設定する必要があります。
    // 今回は onStart 時に DOM複製が行われるため、onStart後にリスナーを設定し直す必要があります。
    // シンプルにするため、ここでは onStart に処理を集中させず、スクロール同期はアクティブ時のみ発生するようにします。
    // ただし、この実装では scroll リスナーは初期化時に設定され続けます。

    let basePoints: {x: number, y: number, dist: number}[] = [];
let maxDist = 0;
    let currentProgressDist = 0;
    let isDragging = false;
    let startX = 0, startY = 0;
    
    // パスは最初に生成しておく
const generatePathPoints = () => {
      const w = window.innerWidth;
      const h = window.innerHeight;
maxDist = Math.sqrt(w*w + h*h);
      
      const steps = Math.ceil(maxDist / CONFIG.density);
      basePoints = [];
      basePoints.push({x: 0, y: 0, dist: 0});
for (let i = 1; i < steps; i++) {
          const t = i / steps;
const bx = t * w;
          const by = t * h;
const noise = (Math.random() - 0.5) * CONFIG.jaggedness * 2;
          const d = t * maxDist;
basePoints.push({ x: bx + noise, y: by - noise, dist: d });
}
      basePoints.push({x: w, y: h, dist: maxDist});
    };
const updateZipper = (progressDist: number) => {
      const w = window.innerWidth;
      const h = window.innerHeight;
let trPoints = "";
      let blPoints = [];

      const angle = Math.atan2(h, w);
const perpAngle = angle - Math.PI / 2;
      const unitDX = Math.cos(perpAngle);
      const unitDY = Math.sin(perpAngle);
for (let i = 0; i < basePoints.length; i++) {
          const p = basePoints[i];
let currentGap = 0;

          if (p.dist < progressDist) {
              currentGap = CONFIG.tearGap;
} else if (p.dist < progressDist + CONFIG.transitionLen) {
              const ratio = 1 - ((p.dist - progressDist) / CONFIG.transitionLen);
currentGap = CONFIG.tearGap * ratio;
          } else {
              currentGap = 0;
}

          const offX = unitDX * currentGap;
const offY = unitDY * currentGap;

          trPoints += `${p.x + offX}px ${p.y + offY}px, `;
blPoints.push(`${p.x - offX}px ${p.y - offY}px`);
      }

      const trPoly = `polygon(${trPoints} ${w}px ${h}px, ${w}px 0px, 0px 0px)`;
const blPoly = `polygon(0px 0px, 0px ${h}px, ${w}px ${h}px, ${blPoints.reverse().join(', ')})`;

      layerTR.style.clipPath = trPoly;
      layerBL.style.clipPath = blPoly;
    };

    generatePathPoints();
    updateZipper(0); // 初期状態でクリップパスをゼロに設定

// --- イベントハンドラ ---
    const onStart = (e: MouseEvent | TouchEvent) => {
      e.preventDefault();

      // ▼▼▼ 修正/追加箇所: ドラッグ開始時にDOMを複製し、ジッパーモードを有効化する ▼▼▼
      if (!document.body.classList.contains('zipper-active')) {
          // 複製対象となる本物のDOM要素を抽出
          const bodyChildren = Array.from(document.body.children).filter(el => {
            return el.id !== 'zipper-container' && el.tagName !== 'SCRIPT' && !el.hasAttribute('data-astro-transition-persist');
          });
          
          // HTML文字列としてコンテンツを複製
          const innerContent = bodyChildren.map(el => el.outerHTML).join('');
          const wrappedContent = `<div class="zipper-body-clone">${innerContent}</div>`;
          
          // 複製コンテンツを分割レイヤーに挿入
          layerBL.innerHTML = wrappedContent;
          layerTR.innerHTML = wrappedContent;

          // スクロール位置の同期
          layerBL.scrollTop = window.scrollY;
          layerTR.scrollTop = window.scrollY;

          // スクロールイベントリスナーをここで設定
          layerBL.addEventListener('scroll', onScrollBL);
          layerTR.addEventListener('scroll', onScrollTR);

          // ジッパーモードを有効化
          document.body.classList.add('zipper-active');
      }
      // ▲▲▲▲▲▲

isDragging = true;
      document.body.classList.add('is-dragging');
      
      layerTR.classList.remove('animate-fly-tr');
      layerBL.classList.remove('animate-fly-bl');
      layerTR.style.transform = '';
      layerBL.style.transform = '';
      layerTR.style.opacity = '';
      layerBL.style.opacity = '';
const p = getPointer(e);
      startX = p.x;
      startY = p.y;
    };
const onMove = (e: MouseEvent | TouchEvent) => {
      if (!isDragging) return;
      if(e.cancelable) e.preventDefault();
const p = getPointer(e);
      const dist = Math.sqrt(p.x*p.x + p.y*p.y);
      
      currentProgressDist = dist;
      updateZipper(currentProgressDist);
const progressRatio = Math.min(dist / (maxDist * CONFIG.threshold), 1);
      ytContent.style.opacity = progressRatio.toString();
      ytContent.style.transform = `scale(${0.8 + (progressRatio * 0.2)})`;
    };
const onEnd = () => {
      if (!isDragging) return;
      isDragging = false;
      document.body.classList.remove('is-dragging');
if (currentProgressDist > maxDist * CONFIG.threshold) {
          finishAnimation();
} else {
          resetAnimation();
      }
    };
const getPointer = (e: MouseEvent | TouchEvent) => {
      return (e as TouchEvent).touches ?
{x: (e as TouchEvent).touches[0].clientX, y: (e as TouchEvent).touches[0].clientY} : 
        {x: (e as MouseEvent).clientX, y: (e as MouseEvent).clientX};
};

    const finishAnimation = () => {
      const start = currentProgressDist;
const end = maxDist + CONFIG.transitionLen;
      const duration = 400;
      const startTime = performance.now();
function step(time: number) {
          const elapsed = time - startTime;
const t = Math.min(elapsed / duration, 1);
          const ease = 1 - (1 - t) * (1 - t);
currentProgressDist = start + (end - start) * ease;
          updateZipper(currentProgressDist);
if (t < 1) {
              requestAnimationFrame(step);
} else {
              layerTR.classList.add('animate-fly-tr');
              layerBL.classList.add('animate-fly-bl');
              // スクロールイベントリスナーを削除
              layerBL.removeEventListener('scroll', onScrollBL);
              layerTR.removeEventListener('scroll', onScrollTR);
              
setTimeout(() => {
                  window.location.href = CONFIG.youtubeUrl;
              }, 800);
}
      }
      requestAnimationFrame(step);
    };
const resetAnimation = () => {
      const start = currentProgressDist;
      const end = 0;
const duration = 300;
      const startTime = performance.now();

      function step(time: number) {
          const elapsed = time - startTime;
const t = Math.min(elapsed / duration, 1);
          const ease = 1 - (1 - t) * (1 - t);
currentProgressDist = start + (end - start) * ease;
          updateZipper(currentProgressDist);
          ytContent.style.opacity = '0';
if (t < 1) {
              requestAnimationFrame(step);
} else {
              // アニメーション完了後、ジッパーモードを解除し、本物のDOMに戻す
              document.body.classList.remove('zipper-active');
              // スクロールイベントリスナーを削除
              layerBL.removeEventListener('scroll', onScrollBL);
              layerTR.removeEventListener('scroll', onScrollTR);
          }
      }
      requestAnimationFrame(step);
    };
const onResize = () => {
        // ジッパーがアクティブな場合のみ処理
        if (document.body.classList.contains('zipper-active')) {
            generatePathPoints();
            updateZipper(currentProgressDist);
        }
    };

    trigger.addEventListener('mousedown', onStart);
trigger.addEventListener('touchstart', onStart, {passive: false});
    window.addEventListener('mousemove', onMove, {passive: false});
    window.addEventListener('touchmove', onMove, {passive: false});
    window.addEventListener('mouseup', onEnd);
    window.addEventListener('touchend', onEnd);
    window.addEventListener('resize', onResize);
cleanupFn = () => {
      document.body.classList.remove('zipper-active');
      trigger.removeEventListener('mousedown', onStart);
      trigger.removeEventListener('touchstart', onStart);
      window.removeEventListener('mousemove', onMove);
      window.removeEventListener('touchmove', onMove);
window.removeEventListener('mouseup', onEnd);
      window.removeEventListener('touchend', onEnd);
      window.removeEventListener('resize', onResize);
      // cleanupFn内では、onStartで追加される scrollリスナーは削除しない（不要）
    };
}

  document.addEventListener('astro:page-load', () => {
    requestAnimationFrame(() => {
        initZipper();
    });
  });
</script>