---
import { ClientRouter } from "astro:transitions";

// CSSをインポート
import '../../public/styles/global.css';

// ZipperEffectをインポート
import ZipperEffect from '../components/ZipperEffect.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <ClientRouter />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body>
  <!-- ページコンテンツ -->
  <slot />

  <!-- 
    全ページ共通のエフェクトとして配置 
    ClientRouterを使っている場合、astro:page-loadイベントで
    新しいページのDOMを取り込んで再初期化されます。
  -->
  <ZipperEffect youtubeUrl="https://www.youtube.com/" />
</body>
</html>